/* pages/house/twohand/index.wxss */

page {
  background: #fff;
}

.list {
  background: #fff;
  padding: 20rpx;
}

.list>image {
  width: 115%;
  height: 5rpx;
  margin-left: -10%;
}

.list>view {
  overflow: hidden;
}

.list>view .left:first-child {
  width: 200rpx;
  height: 200rpx;
}

.sale {
  padding: 20rpx 0rpx;
}

.sale view {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin: 10rpx 0;
  margin-right: 10rpx;
}

.sale view:first-child,
.sale view:last-child {
  color: #e40c01;
  background: #fff8e0;
}

.sale view:nth-child(2n) {
  color: #1c87d8;
  background: rgba(191, 220, 242, 0.5);
}

.sale view:nth-child(3n) {
  color: #5cb66a;
  background: rgba(202, 240, 158, 0.5);
}

.content {
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  width: 60%;
}

.left>text {
  color: #8a8a8a;
}

.list>view .right {
  width: 60rpx;
  height: 45rpx;
  margin-left: 8%;
}

.list>view:last-child {
  border-bottom: 1px solid #eee;
  padding-top: 15rpx;
}

.list>view:last-child text {
  color: #ddd;
}

.list>view:last-child .d {
  color: #999;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.list .bian {
  color: #666;
  background: #eee;
  padding: 0 10rpx;
  line-height: 2;
  border-radius: 0px 4px 4px 0px;
}

.top {
  padding: 20rpx;
}

.top>text {
  font-size: 50rpx;
  color: #999;
  vertical-align: middle;
  margin-left: 5%;
}

input {
  display: inline-block;
  width: 500rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.search {
  padding: 8rpx 30rpx;
  border-radius: 50rpx;
  display: inline-block;
  background: #f5f5f5;
}

.search text {
  font-size: 35rpx;
  vertical-align: middle;
  color: #777;
  font-weight: bold;
}

.list .content .down {
  color: #fff;
  background: #1e87d9;
  border-radius: 4px 0px 0px 4px;
}

.title {
  line-height: 35rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.time {
  color: #8a8a8a;
  font-size: 26rpx;
  margin-right: 30rpx
}

.time text {
  color: #8a8a8a;
  font-size: 26rpx;
  margin-right: 10rpx
}

.edit {
  border-radius: 8rpx !important;
}