<!--pages/house/twohand/index.wxml-->
<view>
  <view class='top'>
    <view class='search'><text class='iconfont icon-cx'></text><input type='text' placeholder='搜索'></input></view>
    <text class='iconfont icon-add' bindtap='goto'></text>  
  </view>
  <block wx:for="{{list}}" wx:key="*this">
    <view class='list' id="{{item.id}}" bindtap='detail'>
      <view>
        <image src='../../../image/house.png' class='left'></image>
        <view class='left'>宁海里一区东向两居室朝南随时都可以看房
          <view class='sale'>
            <text>102㎡</text>
            <text>南北通透</text>
            <text>低楼层</text>
            <text>临地铁</text>
          </view>
          <text> <text class='iconfont icon-time'></text> 2018-01-05 16:42:06 </text> 
          <text class='bians bian' catchtap='bian' wx:if="{{!item.bian}}" id="{{index}}">编辑</text>
          <text class='bian down' catchtap='close' wx:if="{{item.bian}}" id="{{index}}">下架</text>
          <text class='bian' catchtap='close' wx:if="{{item.bian}}" id="{{index}}">删除</text>
        </view>
      </view>
      <image src='../../../image/xian.png'></image>
    </view>
  </block>
</view>