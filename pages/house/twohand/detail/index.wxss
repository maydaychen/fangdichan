/* pages/house/twohand/detail/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.container {
  background: #fff !important;
  height: 100%;
  padding: 0 20rpx;
}

.title {
  font-size: var(--font-size-large-x);
  color: var(--color-certification-title);
  font-weight: 500;
}

.sale {
  padding: 40rpx;
  text-align: center;
}

.sale text {
  padding: 10rpx 20rpx;
  border-radius: 2rpx;
  margin-right: 30rpx;
  color: #8E9CA7;
  font-size: 24rpx;
}

.sale text:first-child {
  background: rgba(254, 228, 131, 0.5);
}

.sale text:nth-child(2) {
  background: rgba(191, 220, 242, 0.5);
}

.sale text:last-child {
  background: rgba(202, 240, 158, 0.5);
}

.message {
  padding: 15rpx 0;
  font-size: var(--font-size-large-a);
  color: var(--color-certification-title);
  font-weight: 500;
  margin-top: 20rpx;
}

.message>text {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  color: #fff;
  background: #429EE1;
  padding: 12rpx;
  margin-right: 20rpx;
}

.a>text {
  background: #fc5f5f;
  font-size: 36rpx;
  padding: 9rpx;
}

.b>text {
  background: #F9C97A;
  font-size: 39rpx;
  padding: 7rpx;
}

.half {
  width: 50%;
  margin-top: 14rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.half view {
  font-size: var(--font-size-large);
}

.info-title {
  color: var(--color-login-notice);
}

.info-detail {
  padding-left: 30rpx;
  color: var(--color-certification-title);
}

.message>view {
  margin-left: 9%;
  font-size: 28rpx;
  margin-right: 15rpx;
}
