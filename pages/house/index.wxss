/* pages/house/index.wxss */

.house_index {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3px 8px 0px rgba(172, 171, 171, 0.15);
  border-radius: 10rpx;
  display: flex;
  margin: 40rpx;
}

.house_index image {
  width: 80px;
  height: 80px;
}

.house_title {
  width: 168px;
  height: 33px;
  font-size: 40rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
  line-height: 24px;
}

.house_sub {
  width: 118px;
  height: 23px;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 24px;
}
