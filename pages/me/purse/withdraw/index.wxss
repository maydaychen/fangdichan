/* pages/me/purse/withdraw/index.wxss */
/* pages/me/purse/recharge/index.wxss */
@import '/static/styles/variable.wxss';
@import '/static/iconfont/iconfont.wxss';

.head {
    background: var(--color-white);
    height: 380rpx;
}

.title {
    padding: 59rpx 0 0 70rpx;
    font-size: var(--font-size-large-y);
    color: var(--color-sub-title);
}

.bottom {
    display: flex;
    margin: 30rpx 20rpx 0 20rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid rgba(82, 82, 82, 0.5);
}

.hint {
    font-size: 60rpx;
    color: var(--color-certification-title);
}

input {
    margin: auto 0;
    margin-left: 20rpx;
    line-height: 100%;
    height: 100%;
    font-size: 60rpx;
    color: var(--color-certification-title);
    width: 60%;
}

button {
    background: #8fc1f7;
    width: 705rpx;
    margin: 99rpx auto 0;
    color: var(--color-white);
    font-size: var(--font-size-large-x);
}

.cancel {
    height: 35rpx;
    width: 35rpx;
    margin: auto 0;
    margin-right: 30rpx;
    text-align: center;

}

.leftMoney {
    margin-left: 69rpx;
    color: var(--color-unactive-color);
    font-size: var(--font-size-large-y);
    margin-top: 40rpx;
}

.active {
    background: #298ef8;
}