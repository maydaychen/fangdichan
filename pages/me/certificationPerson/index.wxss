/* pages/me/certificationPerson/index.wxss */
@import '/static/iconfont/iconfont.wxss';
@import '/static/styles/base.wxss';

.container {
  padding: 20rpx;
}

.notification {
  width: 100%;
  height: 64rpx;
  border-radius: 4rpx;
  margin-bottom: 18rpx;
  background-color: var(--color-notification-background);
  font-size: var(--font-size-medium);
  display: flex;
  align-items: center;
  position: relative;
}

.notify-icon {
  margin: 0 9rpx 0 23rpx;
  color: #707070;
  text-align: center;
}

.delete-icon {
  width: 23rpx;
  height: 23rpx;
  color: #707070;
  position: absolute;
  font-size: 30rpx;
  top: 0;
  right: 0;
}

.type {
  width: 100%;
  height: 124rpx;
  padding: 0;
  background-color: var(--color-white);
  font-size: var(--font-size-large-y);
  border-radius: 4rpx;
  display: flex;
  align-items: center;
}

.type view {
  width: 204rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}

.unactive {
  background-color: var(--color-light-green);
  color: var(--color-deep-green);
}

.active {
  background-color: var(--color-light-blue);
  color: var(--color-deep-blue);
  font-weight: bold;
}

.person {
  margin-left: 103rpx;
  margin-right: 108rpx;
}

.message {
  color: #666;
  font-size: 25rpx;
  margin: 20rpx 0;
}

button {
  background: #1d87d9;
  width: 100%;
  height: 100rpx;
  color: #fff;
  box-shadow: 0px 1px 1px 0px #1d87d9;
  margin: 0 auto;
  margin-top: 20rpx;
}

.left {
  width: 200rpx;
  height: 130rpx;
  margin-right: 30rpx;
  text-align: center;
  float: none;
}

.imgs-list {
  flex: 1;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  flex-wrap: wrap;
}

.left:last-child {
  width: 200rpx;
  height: 130rpx;
  margin-right: 0;
  text-align: center;
}

.imgs__item {
  position: relative;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  overflow: hidden;
  width: calc((100% - 70rpx) / 3);
  height: calc((100vw - 88rpx) /3);
}

.imgs__item:last-child {
  position: relative;
  margin-bottom: 20rpx;
  margin-right: 0;
  overflow: hidden;
  width: calc((100% - 70rpx) / 3);
  height: calc((100vw - 88rpx) /3);
}

.imgs__img {
  width: 100%;
  height: 100%;
}

.imgs__delete {
  display: flex;
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  color: #fff;
  font-size: 40rpx;
  justify-content: center;
  align-items: center;
  line-height: 1;
  background-color: rgba(0, 0, 0, 0.4);
}
