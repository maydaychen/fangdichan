<!--pages/me/selectDate/index.wxml-->
<view>
  <view class='selectedDate' bindtap='sure'>确定</view>
  <picker-view mode="date" indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" wx:key="yearIndex" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" wx:key="monthIndex" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" wx:key="dayIndex" style="line-height: 50px">{{item}}日</view>
    </picker-view-column>
  </picker-view>
</view>
