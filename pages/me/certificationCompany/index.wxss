/* pages/me/certificationCompany/index.wxss */
@import '/static/iconfont/iconfont.wxss';
@import '/static/styles/base.wxss';

.container {
  padding: 20rpx;
}

.notification {
  width: 100%;
  height: 64rpx;
  border-radius: 4rpx;
  margin-bottom: 18rpx;
  background-color: var(--color-notification-background);
  font-size: var(--font-size-medium);
  display: flex;
  align-items: center;
  position: relative;
}

input {
  display: inline-block;
  vertical-align: middle;
  width: 350rpx;
  background: #fff;
  margin: 0 10rpx;
}

.notify-icon {
  margin: 0 9rpx 0 23rpx;
  color: #707070;
  text-align: center;
}

.fixed {
  height: 100%;
  z-index: 10;
  left: 0rpx;
}

.fixed>view {
  background: #fff;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  text-align: center;
  padding-bottom: 140rpx;
}

.fixed .bottom {
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}

.fixed>button {
  position: absolute;
  bottom: 20rpx;
  left: 2.5%;
  background: #1d87d9;
  width: 95%;
  height: 94rpx;
  color: #fff;
  box-shadow: 0px 1px 1px 0px #1d87d9;
  margin: 0 auto;
  margin-top: 20rpx;
}

.fixed view label:last-child {
  margin-right: 0rpx;
}

.fixed .see {
  margin: 10%;
  width: 80%;
  border-radius: 10rpx;
  top: 0rpx;
}

.fixed .see text {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}

.choose-active {
  color: #1D87D9;
}

.delete-icon {
  width: 23rpx;
  height: 23rpx;
  color: #707070;
  position: absolute;
  font-size: 30rpx;
  top: 0;
  right: 0;
}

.type {
  width: 100%;
  height: 124rpx;
  padding: 0;
  background-color: var(--color-white);
  font-size: var(--font-size-large-y);
  border-radius: 4rpx;
  display: flex;
  align-items: center;
}

.type view {
  width: 204rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}

.unactive {
  background-color: var(--color-light-green);
  color: var(--color-deep-green);
}

.active {
  background-color: var(--color-light-blue);
  color: var(--color-deep-blue);
  font-weight: bold;
}

.person {
  margin-left: 103rpx;
  margin-right: 108rpx;
}

.message {
  color: #666;
  font-size: 25rpx;
  margin: 20rpx 0;
}

button {
  background: #1d87d9;
  width: 100%;
  height: 94rpx;
  color: #fff;
  font-size: var(--font-size-large-x);
  box-shadow: 0px 1px 1px 0px #1d87d9;
  margin: 40rpx auto 46rpx;
}

.business-licenses {
  width: 710rpx;
  height: 310rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  background-color: var(--color-white);
}

.business-licenses .title {
  height: 28rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.business-licenses .notice {
  height: 24rpx;
  margin-top: 20rpx;
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
}

.business-licenses .upload-licenses-icon {
  width: 130rpx;
  height: 130rpx;
  margin-top: 62rpx;
}

.id-card-info {
  width: 710rpx;
  height: 589rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 42rpx 21rpx 20rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  background-color: var(--color-white);
}

.certification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
  height: 1.4rem;
}

.id-card-info .title {
  height: 28rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.id-card-info .notice {
  height: 58rpx;
  margin-top: 20rpx;
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
}

.example-title {
  height: 26rpx;
  margin-top: 25rpx;
  font-size: var(--font-size-medium-x);
  color: var(--color-light-yellow);
}

.left {
  width: 200rpx;
  height: 130rpx;
  margin-right: 30rpx;
  text-align: center;
  float: none;
}

.imgs-list {
  flex: 1;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  flex-wrap: wrap;
}

.left:last-child {
  width: 200rpx;
  height: 130rpx;
  margin-right: 0;
  text-align: center;
}

.imgs__item {
  position: relative;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  overflow: hidden;
  width: calc((100% - 70rpx) / 3);
  height: 133rpx;
}

.imgs__item:last-child {
  position: relative;
  margin-bottom: 20rpx;
  margin-right: 0;
  overflow: hidden;
  width: calc((100% - 70rpx) / 3);
  height: 133rpx;
}

.imgs__img {
  width: 100%;
  height: 100%;
}

.imgs__delete {
  display: flex;
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  color: #fff;
  font-size: 40rpx;
  justify-content: center;
  align-items: center;
  line-height: 1;
  background-color: rgba(0, 0, 0, 0.4);
}