/* pages/me/certificationCompany/index.wxss */
@import '/static/iconfont/iconfont.wxss';
@import '/static/styles/base.wxss';

.container {
  padding: 20rpx;
}

.notification {
  width: 100%;
  height: 64rpx;
  border-radius: 4rpx;
  margin-bottom: 18rpx;
  background-color: var(--color-notification-background);
  font-size: var(--font-size-medium);
  display: flex;
  align-items: center;
  position: relative;
}

.notify-icon {
  margin: 0 9rpx 0 23rpx;
  color: #707070;
  text-align: center;
}

.delete-icon {
  width: 23rpx;
  height: 23rpx;
  color: #707070;
  position: absolute;
  font-size: 30rpx;
  top: 0;
  right: 0;
}

.type {
  width: 100%;
  height: 124rpx;
  padding: 0;
  background-color: var(--color-white);
  font-size: var(--font-size-large-y);
  border-radius: 4rpx;
  display: flex;
  align-items: center;
}

.type view {
  width: 204rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}

.unactive {
  background-color: var(--color-light-green);
  color: var(--color-deep-green);
}

.active {
  background-color: var(--color-light-blue);
  color: var(--color-deep-blue);
  font-weight: bold;
}

.person {
  margin-left: 103rpx;
  margin-right: 108rpx;
}

.business-licenses {
  width: 710rpx;
  height: 310rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  background-color: var(--color-white);
}

.business-licenses .title {
  height: 28rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.business-licenses .notice {
  height: 24rpx;
  margin-top: 20rpx;
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
}

.business-licenses .upload-licenses-icon {
  width: 130rpx;
  height: 130rpx;
  margin-top: 62rpx;
}

.id-card-info {
  width: 710rpx;
  height: 589rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 42rpx 21rpx 20rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  background-color: var(--color-white);
}

.certification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
  height: 1.4rem;
}

.id-card-info .title {
  height: 28rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.id-card-info .notice {
  height: 58rpx;
  margin-top: 20rpx;
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
}

.example-title {
  height: 26rpx;
  margin-top: 25rpx;
  font-size: var(--font-size-medium-x);
  color: var(--color-light-yellow);
}

.submit {
  width: 700rpx;
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 46rpx;
  border-radius: 10rpx;
  background-color: var(--color-button-background);
  font: var(--font-size-large-x) var(--color-white);
}