/* pages/me/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.personal-center {
  color: #666;
}

.profile {
  margin: 0 auto;
  margin-top: 10rpx;
  width: 710rpx;
  height: 206rpx;
  background-color: #fff;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-left {
  width: 94rpx;
  height: 94rpx;
  margin-left: 21rpx;
  border-radius: 50%;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.profile-right {
  width: 596rpx;
  height: 100%;
  padding: 32rpx 18rpx 40rpx 35rpx;
  box-sizing: border-box;
}

.name {
  font-size: 36rpx;
  color: #323232;
}

.certification {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.certification-left {
  display: flex;
  align-items: center;
}

.certification-title {
  font-size: 32rpx;
}

.certification-type {
  width: 90rpx;
  height: 44rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.certification-active {
  width: 90rpx;
  height: 44rpx;
  margin-left: 16rpx;
  color: #1d86d8;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  background-color: #f2f8fd;
  border-radius: 50rpx;
}

.check-status {
  width: 124rpx;
  height: 44rpx;
  color: #ec1a3d;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  background-color: #f9e1e1;
  border-radius: 50rpx;
}

.check-status-confirmed{
  font-size: 50rpx;
  margin-right: 20rpx;
}

.notification {
  width: 710rpx;
  height: 64rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  margin-top: 18rpx;
  background-color: #f2f8fd;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.notify-icon {
  width: 32rpx;
  height: 28rpx;
  margin-left: 21rpx;
  margin-right: 30rpx;
}

.profile-button {
  width: 710rpx;
  height: 106rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  margin-top: 18rpx;
  background-color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.icon {
  width: 34rpx;
  height: 40rpx;
  margin-left: 27rpx;
  margin-right: 20rpx;
}

.phone {
  color: #b4b0b0;
  font-size: 28rpx;
  width: 323rpx;
  height: 26rpx;
  margin: 0 auto;
  margin-top: 43rpx;
}
