/* pages/me/grade/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.top {
  width: 100%;
  /* height: 325rpx; */
  background: #2c99ee;
  position: relative;
}

.money_hint {
  margin-top: 12rpx;
  margin-left: 80rpx;
  color: white;
  font-size: 34rpx;
}

.money {
  font-weight: bold;
  color: white;
  margin-top: 10rpx;
  margin-left: 75rpx;
  font-size: 100rpx;
}

.money-summarize {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  width: 100%;
  display: flex;
}

.money-summarize-item {
  width: 33.33%;
  text-align: center;
  color: white;
  font-size: var(--font-size-large-y);
  border-right: 1rpx solid white;
}

.money-summarize-item:last-child {
  width: 33.33%;
  text-align: center;
  color: white;
  font-size: var(--font-size-large-y);
  border-right: 0 solid white;
}

.year_picker {
  color: #323232;
  font-size: 28rpx;
}

ec-canvas {
  width: 100%;
  margin-left: -40rpx;
  height: 800rpx;
}

.contain {
  display: flex;
  flex-direction: column;
}

.icon-right {
  color: #ee9058;
}