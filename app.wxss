/**app.wxss**/
@import '/static/styles/variable.wxss';


page {
  background-color: var(--color-background);
  width: 100%;
  font-size: 32rpx;
}

.container {
  background-color: var(--color-background);
  font-size: var(--font-size-medium-x);
  line-height: 1.5;
  font-family: PingFangSC;
}

.white_block {
  margin: 20rpx 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  background: white;
  box-shadow: 0rpx 3rpx 8rpx 0 rgba(172, 171, 171, 0.15);
  border-radius: 4rpx;
}


.left_text {
  width: 200rpx;
  margin-right: 30rpx;
  text-align: center;
  color: var(--color-sub-text);
  font-size: var(--font-size-medium);
}

.left_text:last-child {
  width: 200rpx;
  margin-right: 0;
  text-align: center;
  color: var(--color-sub-text);
  font-size: var(--font-size-medium);
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.left {
  float: left;
}

.right {
  float: right;
}

.d {
  color: #999;
}

.fixed {
  position: fixed;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
}

button::after {
  border: none;
}