/**app.wxss**/
@import '/static/styles/variable.wxss';
@import '/static/iconfont/iconfont.wxss';


page {
  background-color: var(--color-background);
  width: 100%;
  font-size: 32rpx;
  font-family: PingFangSC;
}

.container {
  background-color: var(--color-background);
  font-size: var(--font-size-medium-x);
  line-height: 1.5;
}

.white_block {
  margin: 20rpx 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  background: white;
  box-shadow: 0rpx 3rpx 8rpx 0 rgba(172, 171, 171, 0.15);
  border-radius: 4rpx;
}


.left_text {
  width: 200rpx;
  margin-right: 30rpx;
  text-align: center;
  color: var(--color-sub-text);
  font-size: var(--font-size-medium);
}

.left_text:last-child {
  width: 200rpx;
  margin-right: 0;
  text-align: center;
  color: var(--color-sub-text);
  font-size: var(--font-size-medium);
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.left {
  float: left;
}

.right {
  float: right;
}

.d {
  color: #999;
}

.fixed {
  position: fixed;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
}

button::after {
  border: none;
}

.title-left {
  color: var(--color-certification-title);
  font-size: var(--font-size-medium-x);
}

.title-left-big {
  color: var(--color-certification-title);
  font-size: var(--font-size-large);
  font-weight: 500;
}

.line {
  height: 1rpx;
  width: 100%;
}

.horizon-center {
  margin: 0 auto;
}

.vertical-center {
  margin: auto 0;
}

.text-center {
  text-align: center;
}

.flex-between {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.just-flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.font-3232 {
  color: var(--color-certification-title);
}

.single-line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}